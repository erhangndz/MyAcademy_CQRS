@model List<GetCategoriesQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategoriler</h1>

<table class="table table-bordered">
    @{
        int count = 0;
    }

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>


    @foreach (var item in Model)
    {
        count++;
        <tr>
          <th>@count</th>
          <td>@item.Name</td>
          <td>
            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a>
          </td>

      </tr>
    }


</table>

<a asp-controller="Category" asp-action="CreateCategory"  class="btn btn-dark">Yeni Kategori Oluştur</a>